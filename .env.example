# Project namespace (defaults to the current folder name if not set)
COMPOSE_PROJECT_NAME=mdb-elastic

# Password for the 'elastic' user (at least 6 characters)
ELASTIC_PASSWORD=password

# Password for the 'kibana_system' user (at least 6 characters)
KIBANA_PASSWORD=password

# Version of Elastic products
STACK_VERSION=8.7.1

# Set the cluster name
CLUSTER_NAME=mdb-docker-cluster

# Set to 'basic' or 'trial' to automatically start the 30-day trial
LICENSE=basic
#LICENSE=trial

# Port to expose Elasticsearch HTTP API to the host
ES_PORT=9200

# Port to expose Kibana to the host
KIBANA_PORT=5601

# Increase or decrease based on the available host memory (in bytes)
ES_MEM_LIMIT=1073741824
KB_MEM_LIMIT=1073741824
LS_MEM_LIMIT=1073741824

# SAMPLE Predefined Key only to be used in POC environments
ENCRYPTION_KEY=c34d38b3a14956121ff2170e5030b471551370178f43e5626eec58b04a30fae2

# PostgreSQL with Apache AGE configuration
POSTGRES_PORT=5432
POSTGRES_DB=agedb
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_MEM_LIMIT=1073741824

# Vector Search Configuration
# Options: builtin, openai, huggingface, local, disabled
VECTOR_EMBEDDING_STRATEGY=openai

# Built-in Elasticsearch ML settings
VECTOR_BUILTIN_MODEL=sentence-transformers__all-MiniLM-L6-v2
VECTOR_BUILTIN_DIMS=384

# External API settings (for future use)
OPENAI_API_KEY=your-openai-api-key-here
OPENAI_MODEL=text-embedding-ada-002
OPENAI_DIMS=1024

HUGGINGFACE_API_KEY=your_hf_key_here
HUGGINGFACE_MODEL=sentence-transformers/all-MiniLM-L6-v2
HUGGINGFACE_DIMS=384

# Local embedding service settings
LOCAL_EMBEDDING_URL=http://embedding-service:8080
LOCAL_EMBEDDING_MODEL=local-model
LOCAL_EMBEDDING_DIMS=384

# Vector search behavior
VECTOR_INDEX_PREFIX=postgres-vector
VECTOR_SIMILARITY_METRIC=cosine
